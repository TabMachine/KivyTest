<TitleScreen>:
    canvas.before:
        Rectangle:
            pos: self.pos
            size: self.size
            source: "Assets/images/FlatDesign/Background.png"

	#Main Buttons
    FloatLayout:
	    BoxLayout:
	    	size: root.width / 3 , 400
	    	size_hint: (None, None)
	    	center: root.center
            spacing: 80
	        Button:
	            id: open_tab
	            on_press: root.manager.current = 'ViewScreen'
	            background_color: (0.0, 0.0, 0.0, 0.0)
	            Image:
		            source: 'Assets/images/FlatDesign/PickButtonDark.png'
		            size: (self.parent.width, self.parent.height)
		            y: self.parent.y + self.parent.height - 400
        			x: self.parent.x
	        Button:
	            id: create_tab
	            on_press: root.manager.current = 'CreateScreen'
	            background_color: (0.0, 0.0, 0.0, 0.0)
	            Image:
		            source: 'Assets/images/FlatDesign/PencilButtonDark.png'
		            size: (self.parent.width, self.parent.height)
		            y: self.parent.y + self.parent.height - 400
        			x: self.parent.x
