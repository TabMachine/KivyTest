#:import os os

<Placeholder@Image>:
    size: '75sp', '75sp'
    size_hint: None, None
    source: os.path.join("Assets/images", "kivy-logo-black-256.png")


<CreateScreen>:
    tabarea: tabarea

    BoxLayout:
        size: self.parent.size
        orientation: 'vertical'
        spacing: 200

        # Tab drawing area
        TabArea:
            id: tabarea

