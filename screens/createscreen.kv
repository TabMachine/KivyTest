<NewOrOldFile>:
    BoxLayout:
        padding: 20
        spacing: 60
        size: root.size
        pos: root.pos
        orientation: "horizontal"
        Button:
            text: "Create New Tab"
            on_release: root.newTab()
        Button:
            text: "Edit Existing Tab"
            on_release: root.oldTab()
