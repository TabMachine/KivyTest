#:import os os

<Placeholder@Image>:
    size: '75sp', '75sp'
    size_hint: None, None
    source: os.path.join("images", "kivy-logo-black-256.png")


<CreateScreen>:
	label_widget: Dropdown.__self__
    BoxLayout:
        id: title_layout
        size_hint: None, None
        size: self.parent.size
        Label:
            id: test_label
            text: 'This is the create screen'
	
	#Edit Toolbar		
	BoxLayout:
		Widget
		Widget
		Button:
			id: Toolbar
			text: 'Tools'
			size_hint: (1, .10)
			on_release: Dropdown.open(self)
		Widget
		Widget
		DropDown:
			id: Dropdown
			#auto_dismiss: False
			#attach_to: Toolbar
			on_parent: self.dismiss()
			Button:
				text: 'Play'
				height: 45
				size_hint: (None, None)
			Button:
				text: 'Pause'
				height: 45
				size_hint: (None, None)
			Button:
				text: 'Help'
				height: 45
				size_hint: (None, None)
		

