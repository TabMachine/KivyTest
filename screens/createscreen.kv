			#range: (0,100)
			#step: 5
			#volume: Volume.setter(self)
		ActionBar:
			pos_hint: {'bottom':1}
			ActionView:
				use_separator: True
				ActionPrevious:
					title: 'Editor Toolbar'
					with_previous: False
				ActionOverflow:
				ActionButton:
					text_size: (85,0)
